# Nginx 配置示例 - Lulala 项目
# 使用方法：将此文件复制到 /etc/nginx/sites-available/ 并创建软链接到 sites-enabled/

server {
    listen 80;
    server_name your-domain.com;  # 修改为你的域名
    
    # 前端静态文件根目录（Next.js build 后的 out 目录）
    root /var/www/lulalanew/out;
    index index.html;
    
    # 启用 gzip 压缩
    gzip on;
    gzip_types text/plain text/css application/json application/javascript text/xml application/xml application/xml+rss text/javascript;
    gzip_min_length 1000;
    
    # 静态资源缓存（_next 目录下的文件）
    location /_next/static/ {
        alias /var/www/lulalanew/out/_next/static/;
        expires 1y;
        access_log off;
        add_header Cache-Control "public, immutable";
    }
    
    # 图片等公共资源
    location /public/ {
        alias /var/www/lulalanew/out/;
        expires 30d;
        access_log off;
    }
    
    # API 代理到 PHP 后端
    location /v1/ {
        proxy_pass http://lulala.ju4.com/v1/;
        proxy_http_version 1.1;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        
        # 如果后端在本地，可以使用本地路径
        # proxy_pass http://127.0.0.1:8080/v1/;
    }
    
    # PHP 后端路由（如果后端在同一服务器）
    location /backend/ {
        alias /var/www/lulalanew/backend/;
        index router.php;
        
        try_files $uri $uri/ /backend/router.php?$args;
        
        location ~ \.php$ {
            fastcgi_pass unix:/var/run/php/php-fpm.sock;  # 根据你的 PHP 版本调整
            fastcgi_index router.php;
            include fastcgi_params;
            fastcgi_param SCRIPT_FILENAME $request_filename;
        }
    }
    
    # Next.js 页面路由处理
    # 对于动态路由和客户端路由，返回 index.html
    location / {
        try_files $uri $uri.html $uri/index.html /index.html;
        add_header Cache-Control "no-cache";
    }
    
    # 404 错误处理
    error_page 404 /404.html;
    
    # 安全头
    add_header X-Frame-Options "SAMEORIGIN" always;
    add_header X-Content-Type-Options "nosniff" always;
    add_header X-XSS-Protection "1; mode=block" always;
}

